---
import { getCollection } from 'astro:content';
import { siteConfig } from '../../config';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog - {siteConfig.name}</title>
    <meta name="description" content="Blog posts by {siteConfig.name}" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-white text-gray-900 font-mono">
    <div class="min-h-screen flex flex-col">
      <header class="border-b border-gray-200">
        <div class="max-w-4xl mx-auto px-4 py-6">
          <nav class="flex items-center justify-between">
            <a href="/" class="text-xl font-bold hover:text-[var(--accent-color)] transition-colors">
              {siteConfig.name}
            </a>
            <div class="flex gap-6">
              <a href="/" class="hover:text-[var(--accent-color)] transition-colors">Home</a>
              <a href="/blog" class="text-[var(--accent-color)] font-semibold">Blog</a>
            </div>
          </nav>
        </div>
      </header>

      <main class="flex-grow">
        <div class="max-w-4xl mx-auto px-4 py-16">
          <h1 class="text-4xl font-bold mb-4">Blog</h1>
          <p class="text-gray-600 mb-12">
            Thoughts on healthcare analytics, data engineering, and research.
          </p>

          <div class="space-y-8">
            {sortedPosts.map((post) => (
              <article class="border-l-4 border-[var(--accent-color)] pl-6 py-2">
                <a href={`/blog/${post.slug}`} class="group">
                  <h2 class="text-2xl font-bold mb-2 group-hover:text-[var(--accent-color)] transition-colors">
                    {post.data.title}
                  </h2>
                  <time class="text-sm text-gray-500 mb-3 block">
                    {post.data.pubDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  <p class="text-gray-700 mb-3">{post.data.description}</p>
                  {post.data.tags && (
                    <div class="flex flex-wrap gap-2">
                      {post.data.tags.map((tag) => (
                        <span class="text-xs px-2 py-1 bg-gray-100 rounded">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </a>
              </article>
            ))}
          </div>
        </div>
      </main>

      <footer class="border-t border-gray-200 mt-16">
        <div class="max-w-4xl mx-auto px-4 py-8 text-center text-gray-600">
          <p>&copy; {new Date().getFullYear()} {siteConfig.name}. All rights reserved.</p>
        </div>
      </footer>
    </div>

    <style is:global>
      :root {
        --accent-color: {siteConfig.accentColor};
      }
    </style>
  </body>
</html>
